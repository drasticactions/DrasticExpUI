<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrasticExpMaui.Pages.DownloadViewModelPage"
             Title="DownloadViewModelPage">
    <ContentPage.Content>
        <Grid RowSpacing="5" RowDefinitions="Auto, Auto, Auto">
            <Entry Text="{Binding DownloadUrl}" />
            <Button Grid.Row="1" Text="Download" Command="{Binding DownloadCommand}" />
            <Button Grid.Row="2" Text="Cancel" Command="{Binding CancelCommand}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>