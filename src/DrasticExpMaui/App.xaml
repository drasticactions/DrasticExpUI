<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DrasticExpMaui"
             xmlns:tools="clr-namespace:DrasticExpMaui.Tools"
             x:Class="DrasticExpMaui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <tools:DownloadButtonConverter x:Key="DownloadButtonConverter" />
            <tools:CancelButtonConverter x:Key="CancelButtonConverter" />
            <tools:DeleteButtonConverter x:Key="DeleteButtonConverter" />
            <tools:IsDownloadingConverter x:Key="IsDownloadingConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
